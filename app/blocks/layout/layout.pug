include ../right-content/right-content

mixin layout()
  +b.layout&attributes(attributes)
    +e.ASIDE.left-side
      block sidebar
    +e.center
      +e.HEADER.header
        block header
      +e.MAIN.content
        block content
    +e.ASIDE.right-side
      +e.right-block
        block right

mixin help-layout()
  +b.layout&attributes(attributes)
    +e.ASIDE.left-side
      block sidebar
    +e.center
      +e.HEADER.header
        block header
      block content
    +e.ASIDE.right-side
      +e.right-block.js-sidebar
        block right
