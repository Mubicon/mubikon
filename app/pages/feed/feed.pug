extends ../../layouts/default
include ../../components/sidebar/sidebar
include ../../components/header/header
include ../../components/right-header/right-header
include ../../blocks/icon-menu/icon-menu
include ../../blocks/player/player
include ../../blocks/right-content/right-content
include ../../blocks/tracks/track-list
include ../../blocks/calendar/calendar
include ../../blocks/feed-control/feed-control

block head
  - var pageTitle = 'Каталог — Мубикон'

block sidebar
  +sidebar
    +icon-menu.__menu
      +icon-menu-icon("#", "Трэки", "&#xE05F;")
      +icon-menu-icon("#", "Подборки", "&#xE065;")
      +icon-menu-icon("#", "Трансляция", "&#xE16D;").active
      +icon-menu-icon("#", "Каналы", "&#xE8BF;")
      +icon-menu-icon("#", "Помощь", "&#xE8FD;")

block header
  +header
    +player()._pause
      +player-image("assets/images/album-small-2.jpg")
      +player-content
        +player-info("Let’s dance - Jon Travolta")
          +player-list-control()
        +player-timer()
        +player-equalizer()

block content
  +b.feed
    +e.top-columns
      +e.top-columns-col
        +feed-control()
      +e.top-columns-col
        h1.layout__heading.heading-main Ленты
    +e.playlists
      +playlist-wrap().__playlist
        +playlist-one('Ночь', true)
      +playlist-wrap().__playlist
        +playlist('Вечер', false)._table-hidden
      +playlist-wrap(true).__playlist
        +playlist('Вечер', false)._table-hidden

block right
  +right-header
  +right-heading('feed')
  +calendar-full()
